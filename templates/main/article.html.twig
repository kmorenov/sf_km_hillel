{% extends 'base.html.twig' %}

{% block title %} Aricle: {{ article.title }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    {{ parent() }}

    <div class="example-wrapper">
        <a href="{{ path('article_index') }}">Article Index</a>
        {% dump(app.request.get('_route')) %}
        <h1> Article: {{ article.title }}âœ…</h1>
        <h2>{{ article.content }}</h2>
        <h3><a href="{{ path('category', {'id' : article.category.id}) }}">Category: {{ article.category.id }}</a></h3>
        <h4>Created At: {{ article.createdAt.date }}</h4>
        <h5>Article internal ID: {{ article.id }}</h5>
        <a href="{{ getArticleUrlById(article.id) }}">getArticleUrlById</a>

    </div>
    <div style="border: thin solid deepskyblue" class="form-group" legend="comment">
        <legend>Comments</legend>
        <ul>
            {% for comment in article.comments %}
                <li>{{ comment.content }}
                    <p><i>by</i> {{ comment.author }} <i>on</i> {{ comment.createdAt | date('d-m-y h:i') }}</p>
                </li>
            {% endfor %}
        </ul>
        <form action="{{ path('comment', {'article' : article.id}) }}">
            <textarea name="content" cols=100 placeholder="Type your comment here"></textarea>
            <br/>
            <button>Submit Comment</button>
        </form>
    </div>
{% endblock %}

